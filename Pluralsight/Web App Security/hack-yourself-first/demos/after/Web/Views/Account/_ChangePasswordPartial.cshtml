@model Web.Models.LocalPasswordModel

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
  @Html.ValidationSummary()
  @Html.AntiForgeryToken()

  <fieldset>
    <legend>Change password.</legend>
    <div class="control-group">
      @Html.LabelFor(m => m.CurrentPassword, new { @class = "control-label" })
      <div class="controls">
        @Html.EditorFor(m => m.CurrentPassword)
      </div>
    </div>
    <div class="control-group">
      @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
      <div class="controls">
        @Html.EditorFor(m => m.NewPassword)
      </div>
    </div>
    <div class="control-group">
      @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
      <div class="controls">
        @Html.EditorFor(m => m.ConfirmPassword)
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <input type="submit" value="Change password" class="btn" />
      </div>
    </div>
  </fieldset>
}
